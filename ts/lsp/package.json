{
  "name": "piqued-lsp",
  "displayName": "piqued-lsp",
  "description": "Piqued Language Server",
  "packageManager": "yarn@3.2.4",
  "version": "0.0.1",
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "module": "dist/extension.js",
  "engines": {
    "vscode": "^1.34.0"
  },
  "activationEvents": [
    "onCommand:extension.sayHello",
    "onLanguage:pgsql"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pgsql",
        "aliases": [
          "PostgreSQL",
          "postgres"
        ],
        "extensions": [
          ".pgsql",
          ".sql"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./icons/postgres-icon.png",
          "light": "./icons/postgres-icon.png"
        }
      }
    ],
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Piqued Configuration",
      "properties": {
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "grammars": [
      {
        "language": "pgsql",
        "scopeName": "source.sql.pgsql",
        "path": "./syntaxes/postgresql.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@types/vscode": "^1.34.0",
    "esbuild": "^0.19.5",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "build": "esbuild --bundle --outfile=dist/extension.js --external:vscode --platform=node --format=cjs ./src/extension.ts",
    "vscode-package": "pwd && yarn build && vsce package",
    "watch": "tsc -w"
  },
  "r": {
    "build": "tsc",
    "watch": "tsc -w"
  }
}
